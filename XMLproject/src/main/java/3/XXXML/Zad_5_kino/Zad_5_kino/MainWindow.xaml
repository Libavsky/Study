<Window x:Class="Zad_5_kino.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:Zad_5_kino"
        mc:Ignorable="d"
       Title="MainWindow" Height="700" Width="1200" MinHeight="400" MinWidth="900"
        DataContext="{Binding Source={StaticResource Locator}, Path=Main}">
    <Window.Resources>
        <local:BoolToVisibilityConverter x:Key="BoolToVisibilityConverter" />
        <local:BoolToVisibilityConverterInvert x:Key="BoolToVisibilityConverterInvert" />
    </Window.Resources>

    <Grid>

        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="1*"/>
            <ColumnDefinition Width="1*"/>
        </Grid.ColumnDefinitions>
        <Grid.RowDefinitions>
            <RowDefinition Height="20"/>
            <RowDefinition Height="50"/>
            <RowDefinition Height="1*"/>
            <RowDefinition Height="1*"/>
            <RowDefinition Height="50"/>
        </Grid.RowDefinitions>
        <Menu IsMainMenu="True" Grid.ColumnSpan="2">
            <MenuItem Header="_File">
                <MenuItem Header="_Save" Command="{Binding SaveCommand}"/>
                <Separator />
                <MenuItem Header="_Transform to HTML" Command="{Binding TransformToHTML}"/>
            </MenuItem>
        </Menu>
        <TextBlock VerticalAlignment="Top" HorizontalAlignment="Center" Margin="0,10,0,0" Text="{Binding CarRental.opis.temat}" FontWeight="Bold" FontSize="18" Grid.Row="1" Grid.ColumnSpan="2"/>
        <Frame Name="filmFrame" Grid.Column="0" Grid.Row="2" Grid.RowSpan="3" Navigated="filmFrame_Navigated">
            <Frame.Template>
                <ControlTemplate TargetType="Frame">
                    <DockPanel Margin="7">
                        <Grid Margin="7" DockPanel.Dock="Top">
                            <StackPanel Orientation="Horizontal" HorizontalAlignment="Right">
                                <Button Command="{x:Static NavigationCommands.BrowseBack}" Margin="10,0" Content="Back" Width="50" Visibility="{TemplateBinding CanGoBack, Converter={StaticResource BoolToVisibilityConverter}}" />
                                <Button Content="Add" Width="50" Margin="10,0" Click="AddFilm" Visibility="{TemplateBinding CanGoBack, Converter={StaticResource BoolToVisibilityConverterInvert}}"/>
                                <Button Content="Delete" Width="75" Margin="10,0" Click="DeleteFilm" Visibility="{TemplateBinding CanGoBack, Converter={StaticResource BoolToVisibilityConverterInvert}}"/>
                                <Button Content="Confirm" Width="75" Margin="10,0" Click="ConfirmFilm" Visibility="{TemplateBinding CanGoBack, Converter={StaticResource BoolToVisibilityConverter}}"/>
                            </StackPanel>
                            <TextBlock FontWeight="Bold" FontSize="14" Text="Filmy" HorizontalAlignment="Left"/>
                        </Grid>
                        <Border BorderBrush="Black" Margin="7" BorderThickness="2" Padding="7" CornerRadius="2">
                            <ContentPresenter />
                        </Border>
                    </DockPanel>
                </ControlTemplate>
            </Frame.Template>
        </Frame>
        <Frame Name="kinoFrame" Grid.Column="1" Grid.Row="2">
            <Frame.Template>
                <ControlTemplate TargetType="Frame">
                    <DockPanel Margin="7">
                        <Grid Margin="7" DockPanel.Dock="Top">
                            <StackPanel Orientation="Horizontal" HorizontalAlignment="Right">
                                <Button Command="{x:Static NavigationCommands.BrowseBack}" Margin="10,0" Content="Back" Width="50" Visibility="{TemplateBinding CanGoBack, Converter={StaticResource BoolToVisibilityConverter}}" />
                                <Button Content="Add" Width="50" Margin="10,0" Click="AddKino" Visibility="{TemplateBinding CanGoBack, Converter={StaticResource BoolToVisibilityConverterInvert}}"/>
                                <Button Content="Delete" Width="75" Margin="10,0" Click="DeleteKino" Visibility="{TemplateBinding CanGoBack, Converter={StaticResource BoolToVisibilityConverterInvert}}"/>
                                <Button Content="Confirm" Width="75" Margin="10,0" Click="ConfirmKino" Visibility="{TemplateBinding CanGoBack, Converter={StaticResource BoolToVisibilityConverter}}"/>
                            </StackPanel>
                            <TextBlock FontWeight="Bold" FontSize="14" Text="Kina" HorizontalAlignment="Left"/>
                        </Grid>
                        <Border BorderBrush="Black" Margin="7" BorderThickness="2" Padding="7" CornerRadius="2">
                            <ContentPresenter />
                        </Border>
                    </DockPanel>
                </ControlTemplate>
            </Frame.Template>
        </Frame>
        <Frame Name="seansFrame" Grid.Column="1" Grid.Row="3">
            <Frame.Template>
                <ControlTemplate TargetType="Frame">
                    <DockPanel Margin="7">
                        <Grid Margin="7" DockPanel.Dock="Top">
                            <StackPanel Orientation="Horizontal" HorizontalAlignment="Right">
                                <Button Command="{x:Static NavigationCommands.BrowseBack}" Margin="10,0" Content="Back" Width="50" Visibility="{TemplateBinding CanGoBack, Converter={StaticResource BoolToVisibilityConverter}}" />
                                <Button Content="Add" Width="50" Margin="10,0" Click="AddSeans" Visibility="{TemplateBinding CanGoBack, Converter={StaticResource BoolToVisibilityConverterInvert}}"/>
                                <Button Content="Delete" Width="75" Margin="10,0" Click="DeleteSeans" Visibility="{TemplateBinding CanGoBack, Converter={StaticResource BoolToVisibilityConverterInvert}}"/>
                                <Button Content="Confirm" Width="75" Margin="10,0" Click="ConfirmSeans" Visibility="{TemplateBinding CanGoBack, Converter={StaticResource BoolToVisibilityConverter}}"/>
                            </StackPanel>
                            <TextBlock FontWeight="Bold" FontSize="14" Text="Seanse" HorizontalAlignment="Left"/>
                        </Grid>
                        <Border BorderBrush="Black" Margin="7" BorderThickness="2" Padding="7" CornerRadius="2">
                            <ContentPresenter />
                        </Border>
                    </DockPanel>
                </ControlTemplate>
            </Frame.Template>
        </Frame>
        <StackPanel Grid.Column="1" Grid.Row="4" Margin="15,7,15,7">
            <ItemsControl ItemsSource="{Binding .opis.autorzy}">
                <ItemsControl.ItemTemplate>
                    <DataTemplate>
                        <TextBlock FontWeight="Bold" HorizontalAlignment="Right">
                            <Run Text="{Binding imie}" />
                            <Run Text=" " />
                            <Run Text="{Binding nazwisko}" />
                            <Run Text=" " />
                            <Run Text="{Binding nr_indeksu}" />
                        </TextBlock>
                    </DataTemplate>
                </ItemsControl.ItemTemplate>
            </ItemsControl>
        </StackPanel>
    </Grid>
</Window>

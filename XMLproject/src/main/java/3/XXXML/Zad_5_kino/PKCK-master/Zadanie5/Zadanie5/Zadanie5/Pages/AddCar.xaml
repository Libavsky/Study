<Page x:Class="Zadanie5.Pages.AddCar"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
      xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
      xmlns:local="clr-namespace:Zadanie5.Pages"
      mc:Ignorable="d" 
      d:DesignHeight="300" d:DesignWidth="300"
      Title="AddCar"
      DataContext="{Binding Source={StaticResource Locator}, Path=Main}">

    <ScrollViewer>
        <StackPanel>
            <TextBlock Text="Marka"/>
            <TextBox Text="{Binding NewCar.nazwa.marka}"/>
            <TextBlock Text="Model"/>
            <TextBox Text="{Binding NewCar.nazwa.model}"/>
            <TextBlock Text="Generacja"/>
            <TextBox Text="{Binding NewCar.nazwa.generacja}"/>
            <TextBlock Text="Przebieg"/>
            <TextBox Text="{Binding NewCar.przebieg}"/>
            <TextBlock Text="Rok produkcji"/>
            <TextBox Text="{Binding NewCar.rok_produkcji}"/>
            <TextBlock Text="Kolor"/>
            <TextBox Text="{Binding NewCar.kolor}"/>
            <TextBlock Text="Miasto"/>
            <TextBox Text="{Binding NewCar.miasto}"/>
            <TextBlock Text="Koszt wypożyczenia na jeden dzień"/>
            <TextBox Text="{Binding NewCar.cena_wypożyczenia_za_1_dzien}"/>
        </StackPanel>
    </ScrollViewer>
</Page>

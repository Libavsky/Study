<Page x:Class="Zad_5_kino.Views.DodajKina"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
      xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
      xmlns:local="clr-namespace:Zad_5_kino.Views"
      mc:Ignorable="d" 
      d:DesignHeight="300" d:DesignWidth="300"
      Title="DodajKina"
       DataContext="{Binding Source={StaticResource Locator}, Path=Main}">


    <ScrollViewer>
        <StackPanel>
            <TextBlock Text="Id kina"/>
            <TextBox Text="{Binding NewKino.id}"/>
            <TextBlock Text="Nazwa"/>
            <TextBox Text="{Binding NewKino.nazwa}"/>
            <TextBlock Text="Miasto"/>
            <TextBox Text="{Binding NewKino.miasto}"/>
            </StackPanel>
    </ScrollViewer>
</Page>
